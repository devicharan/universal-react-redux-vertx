{
  "name": "Universal-Vertx-React",
  "version": "1.0.0",
  "description": "Basic boilerplate for SEO based vertx react.js Applications",
  "mainVerticle": "server.js",
  "mainJavaVerticle": "com.example.Main",
  "scripts": {
    "clean": "rm -Rf .vertx",
    "install": "node ./webpack.config.js",
    "postinstall": "mvn -f .vertx/pom.xml package",
    "build": "./node_modules/.bin/webpack",
    "build:release": "npm run clean && ./node_modules/.bin/webpack  && npm run clean",
    "prestart": "npm run build:release",
    "start": "java -jar run.jar",
    "watch": "npm run start -- --redeploy=\"src/**\" --on-redeploy=\"npm run watch\""
  },
  "author": "Devicharan",
  "license": "MIT",
  "dependencies": {
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-react-display-name": "^6.3.13",
    "babel-plugin-transform-runtime": "^6.3.13",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-preset-stage-2": "^6.22.0",
    "babel-register": "^6.3.13",
    "babel-runtime": "^6.3.19",
    "multireducer": "^2.0.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^4.0.0",
    "react-router": "^3.0.2",
    "react-router-redux": "^4.0.0",
    "react-timeout": "^1.0.1",
    "redux": "^3.0.4",
    "redux-async-connect": "^1.0.0-rc2",
    "redux-form": "^3.0.12",
    "scroll-behavior": "^0.3.2",
    "superagent": "^1.4.0"
  },
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-react-intl": "^2.3.1",
    "babel-plugin-react-transform": "^2.0.0",
    "babel-plugin-typecheck": "^3.6.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "react-a11y": "^0.2.6",
    "react-addons-test-utils": "^0.14.0",
    "uglifyjs-webpack-plugin": "^0.4.6",
    "unminified-webpack-plugin": "^1.2.0",
    "webpack": "^2.2.0"
  },
  "javaDependencies": {
    "io.vertx:vertx-lang-js": "3.4.2",
    "io.vertx:vertx-web": "3.4.2",
    "io.vertx:vertx-core": "3.4.2",
    "io.vertx:vertx-web-client": "3.4.2",
    "io.vertx:vertx-rx-java": "3.4.2",
    "xyz.jetdrone:vertx.js":"1.0.0",
    "net.arnx:nashorn-promise":"0.1.0"
  }
}
